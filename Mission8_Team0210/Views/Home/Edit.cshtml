@{
    ViewData["Title"] = "Add A Task";
}

@model Mission8_Team0210.Models.ToDoList
<!-- Form to input the tasks -->

<h3>Enter a Task</h3>

<div>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for="TaskId" />

        <label asp-for="Task">Task</label>
        <input asp-for="Task" /><br />

        <label asp-for="Date">Due Date</label>
        <input asp-for="Date" type="date" /><br />

        <label asp-for="Quadrant"></label>
        <select asp-for="Quadrant">
            <option value="">Select a Quadrant</option>
            <option value=1>1 - Important / Urgent</option>
            <option value=2>2 - Important / Not Urgent</option>
            <option value=3>3 - Not Important / Urgent</option>
            <option value=4>4 - Not Important / Not Urgent</option>
        </select><br />

        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select><br />

        <label asp-for="IsCompleted">Completed?</label>
        <select asp-for="IsCompleted">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <button type="submit">Submit</button>
    </form>
</div>
